extends ../layout/common
block common
    nav.navbar.navbar-light.bg-light.mb-3.p-4.navbarnone
            a.navbar-brand(href='/')
                img.d-inline-block.align-top.mr-1(src='/img/logo.jpg', width='30', height='30', alt='')
                |Home
            a.nav-link.navcus(href="./") User
            a.nav-link.navcus(href="#") Boock
            a.nav-link.navcus(href="#") Pets
            a.nav-link.navcus(href="#") About us
    .container
        if er
            each erro in er
                .alert.alert-danger=erro

        form(action="/user/create",method="POST")
            .input-group.input-group.mb-2
                .input-group-prepend 
                    span.input-group-text Name user
                input.form-control(type="text", name ="na",value=value?value.na:"")
            .input-group.input-group.mb-2
                .input-group-prepend 
                    span.input-group-text Phone user
                input.form-control(type="text", name ="phon",value=value?value.phon:"")
            .input-group
                .input-group-prepend
                    span.input-group-text About infomatino
                textarea.form-control(aria-label='With textarea',name="about")=value=value?value.about:""
            
            button.btn.btn-outline-secondary.mt-1 Create
            a.btn.btn-outline-secondary.mt-1.ml-1(href="/user") Cancel
        